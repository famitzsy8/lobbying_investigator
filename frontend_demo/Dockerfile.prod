# Production Node.js container for frontend_demo Next.js app
FROM node:18-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Build the Next.js application
RUN npm run build

# Expose the Next.js production server port
EXPOSE 3000

# Start the Next.js production server
CMD ["npm", "start"]